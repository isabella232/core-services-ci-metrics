<p style="text-align:center"><a href="/metrics">Want metrics?</a></p>

<ol>
<% @failures.each do |failure| %>
  <li>
    <%= form_for [:api, :v1, failure], format: :json  do |f| %>
      <%= f.text_field :pipeline, readonly: true %>
      <%= f.text_field :job, readonly: true %>
      <%= f.text_field :build, readonly: true %>
      <%= f.text_field :task %>
      <%= f.select :category, ['bad code', 'env no longer claimed', 'iaas failure', 'pipeline configuration', '¯\_(ツ)_/¯'], include_blank: true %>
      <%= f.text_area :description %>

      <%= f.submit %>
    <% end %>
  </li>
<% end %>
</ol>
